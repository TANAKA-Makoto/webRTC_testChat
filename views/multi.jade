extends layout
block headerAdd
  script(src="#{socketServerURL}/socket.io/socket.io.js" type="text/javascript")
block content
  h1= title
  p Welcome to #{title}
  select( id="deviceSelector" name="camera")
  br
  button( onclick="startVideo()") Start
  button( type="button" onclick="startVideo();") Start Video
  button( type="button" onclick="stopVideo();") Stop Video
  &nbsp;
  button( type="button" onclick="connect();") Connect
  button( type="button" onclick="hangUp();") Hang Up
  div
    div(id="local_div" style="width: 640px; height: 480px; border: 2px solid black;")
      video( id="local_video" autoplay style="width: 100%; height: 100%;")
  div
    div(id="remote_div" style="width: 1240px; height: 960px; border: 2px solid black;")
      video( id="remote_video" autoplay style="width: 100%; height: 100%;")
  p SDP to send
    br
    textarea(id="text_for_send_sdp" rows="5" cols="60" readonly="readonly") SDP to send
  p SDP to recieve:&nbsp;
    button( type="button" onclick="onSdpText();") Receive remote SDP
    br
    textarea(id="text_for_receive_sdp" rows="5" cols="60")
  include footer
  script( src="/javascripts/init.js" type="text/javascript")
  script( src="/javascripts/multi.js" type="text/javascript")
